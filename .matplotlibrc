# Matplotlib configuration for Chinese font support

# Font settings
font.family: sans-serif
font.sans-serif: WenQuanYi Micro Hei, WenQuanYi Zen Hei, Noto Sans CJK SC, Noto Sans CJK JP, DejaVu Sans, sans-serif

# Disable minus sign issue
axes.unicode_minus: False

# Backend
backend: Agg

# Cache settings - disable to force font reload
axes.formatter.use_mathtext: False
